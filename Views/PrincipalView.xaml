<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProvaMVVM.Views.PrincipalView"
             Title="PrincipalView">
    <StackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
            <Label Text="Bem-vindo(a):" FontSize="22"/>
            <Label Text="{Binding Nome}" FontSize="22" FontAttributes="Bold"/>
        </HorizontalStackLayout>

        <Button Text="Atualizar" Command="{Binding IrParaCadastroCommand}" />
        <Button Text="Visualizar" Command="{Binding VisualizarCommand}" />
    </StackLayout>
</ContentPage>